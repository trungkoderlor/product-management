extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main 
    h1(class="mb-4") Thêm Mới Danh Mục Sản Phẩm
    form(
        action=`${prefixAdmin}/categories/edit/${record.id}?_method=PATCH`
        id="form-create-procategoriesduct"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value = record.title
                required
            )
        div(class="form-group")
            label(for="parent_id") Danh Mục Cha
            select(
                class="form-control"
                id="parent_id"
                name="parent_id"
            )
                option(value="") Danh Mục Gốc
                +select-tree(records,1,record.parent_id)
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"

            ) #{record.description}
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"     
                accept="image/*" 
                upload-image-input          
                    )
            img(
                src=record.thumbnail
                upload-image-preview
                class="image-preview"
            )
        div(class="form-group")
            label(for="stock") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value = record.position
            )
            button(
                type="button"
                class = 'btn btn-danger btn-sm cancel-image-button-d'
                cancel-image-button
                style = "margin-top: 32px;margin-left: 10px;"
            ) Hủy       
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked= (record.status=="active"? true : false)
            )
        
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="inactive"
                checked= (record.status=="inactive"? true : false)
            )
            label(for="statusActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập Nhật


    script(src="/admin/js/product.js")
include ../mixins/sub-menu.pug
header.header 
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src="/images/logo.svg", alt="Logo")
      .col-5
        form(id="form-search" action="/search" method="GET")
          .input-group
              input(
                  type="text"
                  class="form-control"
                  placeholder="Nhập từ khóa"
                  name="keyword"
                  value = keywords
              )
              .input-group-append
                  button(
                      class="btn btn-success"
                      type="submit"
                  ) Tìm 
      .col-4
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              a(href="/products") Sản phẩm
              - const path = "/products";
              +sub-menu(categories, path)
            li
                a.nav-link(href="/cart" style="margin-top:5px; color: black")
                  i.fas.fa-shopping-cart
                  |  Giỏ hàng (#{miniCart ? miniCart.totalQuantity: 0})
            if user
              li
                a(href="/user/info") #{user.fullname}
              li
                a(href="/user/logout") Đăng xuất
            else
              li
                a(href="/user/register") Đăng ký
              li
                a(href="/user/login") Đăng nhập 
